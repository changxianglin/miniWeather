.container {
  display: flex;
  height: 100vh;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.detail {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.item {
  display: flex;
  flex-direction: row;
  margin: 20rpx 0;
}

.content {
  width: 33.3%;
  text-align: center;
}

text {
  font-size: 80rpx;
  color: #3c5f81;
}

image {
  width: 220rpx;
}